<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvTeamOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:text="Santos"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@id/imgTeamOne"

                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgTeamOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/tvScoreOne"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_default_shadow_48" />

            <TextView
                android:id="@+id/tvScoreOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="0"
                android:textSize="32dp"
                app:layout_constraintEnd_toStartOf="@+id/tvX"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="X"
                android:textSize="32dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScoreTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="0"
                android:textSize="32dp"
                app:layout_constraintStart_toEndOf="@+id/tvX"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgTeamTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintStart_toEndOf="@id/tvScoreTwo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_default_shadow_2_48" />

            <TextView
                android:id="@+id/tvTeamTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="Corinthians"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/imgTeamTwo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLeagueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Brasileirão Série A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvX" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>